<%- include('layout/header') %>
<%- include('layout/sidebar') %>

<!-- Main Content -->
<section class="main-content position-absolute" style="background: #E5E5E5;" id="content">
    <!-- Breadcrumb -->
    <%- include('layout/breadcrumb') %>
    <!-- End Breadcrumb -->

    <div class="container title-page">
        <div class="row justify-content-between align-items-center">
            <div class="col-lg-2">
                <h5 style="font-size: 20px; font-weight: 700; line-height: 30px;">Add New Car</h5>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row p-0">
            <div class="col-lg-12">
                <form action="/cars/add" method="POST" id="add-form" enctype="multipart/form-data">
                    <div class="card form border-0">
                        <div class="card-body form-group d-flex flex-column content-form">
                            <div class="row">
                                <label for="name" class="col-2">Nama<span class="text-danger">*</span></label>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Avanza" required>
                                </div>
                            </div>
                            <div class="row">
                                <label for="price" class="col-2">Sewa Per Hari<span class="text-danger">*</span></label>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="price" name="price" placeholder="Rp 0,-" required>
                                </div>
                            </div>
                            <div class="row">
                                <label for="size" class="col-2">Ukuran<span class="text-danger">*</span></label>
                                <div class="col-6">
                                    <select class="form-select" name="size" id="size" required>
                                        <option value="Small" selected>Small</option>
                                        <option value="Medium">Medium</option>
                                        <option value="Large">Large</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <label for="image" class="col-2">Foto<span class="text-danger">*</span></label>
                                <div class="col-6">
                                    <input type="file" class="form-control" id="image" name="image" required>
                                    <small>File size max. 2MB</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="button-form d-flex position-absolute">
                        <button class="btn btn-cancel" type="reset">Cancel</button>
                        <button class="btn btn-save" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End Main Content -->
</main>

<%- include('layout/footer') %>